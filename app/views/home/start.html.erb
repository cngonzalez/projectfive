<%= stylesheet_link_tag 'splash' %>

<div class="hero-bar">
  <div class="container">
  <div class="row">
    <h2>Option 1: Upload a CSV</h2>
    <p>
      Get visualizations instantly, using your own data.
    </p>

  </div>
  <div class="hero-upload container" style="text-align: center;">
  <div class="row">
  <!-- <div class="col-md-2"></div> -->
  <!-- <div class="col-md-8"> -->
    <%= form_tag({:action => :homeUploadCSV}, multipart: true) do %>
    <div class="row" style="margin-left:30px;">
      <div class="col-md-4"></div>
      <%= file_field_tag :file, class: "col-md-2 marginTop5", style: "color:black;" %>
      <%= submit_tag( "Import", class: "col-md-1 btn btn-sm btn-brown") %>
      <div class="col-md-4"></div>
      </div>
    <% end %>
    <!-- </div> -->
    <!-- <div class="col-md-2"></div> -->
    </div>
</div>
  <hr>
  <div class="row">
    <h2>Option 2: See a sample visualization page</h2>
    <p>
      <a class="btn btn-primary btn-block" href="<%=home_index_path%>">Check out the NYC dataset.</a>
    </p>
  </div>
</div>
</div>
